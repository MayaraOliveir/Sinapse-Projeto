@{
    ViewData["Title"] = "Conexões";
}

<div class="container">
    <h1 class="display-5 mb-4">Minhas Conexões</h1>

    <!-- Estatísticas -->
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="display-4 mb-1">150</h3>
                    <p class="text-muted mb-0">Conexões Ativas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="display-4 mb-1">5</h3>
                    <p class="text-muted mb-0">Solicitações Recebidas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="display-4 mb-1">3</h3>
                    <p class="text-muted mb-0">Solicitações Enviadas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Solicitações Recebidas -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Solicitações de SkillSwap Recebidas</h5>
        </div>
        <div class="card-body">
            @for (int i = 0; i < 3; i++)
            {
                <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/48" class="rounded-circle me-3" alt="Avatar">
                        <div>
                            <h6 class="mb-1">Pedro Santos</h6>
                            <p class="text-muted mb-1">Quer aprender: <span class="badge bg-info">JavaScript</span></p>
                            <p class="text-muted mb-0">Oferece: <span class="badge bg-success">Python</span></p>
                        </div>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-success btn-sm">
                            <i class="bi bi-check-lg me-1"></i>Aceitar
                        </button>
                        <button class="btn btn-danger btn-sm">
                            <i class="bi bi-x-lg me-1"></i>Recusar
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Solicitações Enviadas -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Solicitações de SkillSwap Enviadas</h5>
        </div>
        <div class="card-body">
            @for (int i = 0; i < 2; i++)
            {
                <div class="d-flex align-items-center justify-content-between p-3 border-bottom">
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/48" class="rounded-circle me-3" alt="Avatar">
                        <div>
                            <h6 class="mb-1">Ana Costa</h6>
                            <p class="text-muted mb-1">Você quer aprender: <span class="badge bg-info">UI/UX Design</span></p>
                            <p class="text-muted mb-0">Você oferece: <span class="badge bg-success">React</span></p>
                        </div>
                    </div>
                    <button class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- Conexões Ativas -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Conexões Ativas</h5>
        </div>
        <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <img src="https://via.placeholder.com/48" class="rounded-circle me-3" alt="Avatar">
                                    <div>
                                        <h6 class="mb-1">Lucas Oliveira</h6>
                                        <p class="text-muted mb-0">Conectados há 2 meses</p>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">Você aprende:</small>
                                    <span class="badge bg-info me-1">Python</span>
                                    <span class="badge bg-info">Data Science</span>
                                </div>
                                <div class="mb-3">
                                    <small class="text-muted d-block mb-1">Você ensina:</small>
                                    <span class="badge bg-success me-1">JavaScript</span>
                                    <span class="badge bg-success">React</span>
                                </div>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-chat-dots me-1"></i>Mensagem
                                    </button>
                                    <button class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-person-x me-1"></i>Encerrar Conexão
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 